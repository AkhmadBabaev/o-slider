mixin checkbox({ title = "title", name = "", isChecked = false } = {})
  - const className = "checkbox";

  div(class = `${className} js-${className}` tabindex = 0)
    label(class = `${className}__label`)
      input(
        class = `${className}__input js-${className}__input`
        type = "checkbox"
        name = name
        checked = isChecked
      )
      span(class = `${className}__title js-${className}__title`)= title
      div(class = `${className}__toggler`)
