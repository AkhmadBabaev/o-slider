include /components/num-field/num-field
include /components/checkbox/checkbox
include /components/slider/slider

mixin panel({ hue = 255, saturation = "10%", lightness = "40%", min = 0, max = 100, step = 1, from = 0, to, tip = false, bar = false, scale = false, interval = false, direction = "horizontal" } = {})
  -
    const className = "panel";
    const { fields, checkboxes } = require("@components/panel/data.json");

    const sliderClass = `${className}__slider`;
    const fieldClass = `${className}__field`;
    const checkboxClass = `${className}__checkbox`;

  div(
    class = `${className} js-${className}`
    style = `--h: ${hue}; --s: ${saturation}; --l: ${lightness}`
  )
    div(class = `${sliderClass} js-${sliderClass}`)
      +slider({ min, max, step, from, to, tip, bar, scale, interval, direction })

    div(class = `${className}__raw`)

      each fieldData in fields
        div(class = `${fieldClass} js-${fieldClass}`)
          +num-field(fieldData)

    div(class = `${className}__raw`)

      each checkboxData in checkboxes
        div(class = `${checkboxClass} js-${checkboxClass}`)
          +checkbox(checkboxData)
